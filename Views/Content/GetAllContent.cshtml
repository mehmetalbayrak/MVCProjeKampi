@using Entity.Concrete
@model List<Content>
@{
    ViewBag.Title = "GetAllContent";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>GetAllContent</h2>
@using (Html.BeginForm("GetAllContent", "Content", FormMethod.Post))
{
    <p>Aranacak kelimeyi girin: @Html.TextBox("search")</p>
    <input type="submit" value="Ara" class="btn btn-primary"/>
}
@foreach (var item in Model)
{
    <p>@item.ContentValue</p>
}
